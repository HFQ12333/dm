<!--index.wxml-->
<view class="container">
    <view class="condition-view">
        <text class="input-text">{{input}}</text>
    </view>
    <view class="result-view">
        <text class="result-text">{{result}}</text>
    </view>
    <view class="number-view">
        <button type="default" data-content="C" size="default" bindtap="clear">C</button>
        <button type="default" data-content="X" size="default" bindtap="removeLast">X</button>
        <button type="default" data-content="+/-" size="default" bindtap="positiveOrNegative">+/-</button>
        <button type="default" data-content="÷" size="default" bindtap="tapOperateSymbol">÷</button>
        <button type="default" data-content="7" size="default" bindtap="tapNumber">7</button>
        <button type="default" data-content="8" size="default" bindtap="tapNumber">8</button>
        <button type="default" data-content="9" size="default" bindtap="tapNumber">9</button>
        <button type="default" data-content="×" size="default" bindtap="tapOperateSymbol">×</button>
        <button type="default" data-content="4" size="default" bindtap="tapNumber">4</button>
        <button type="default" data-content="5" size="default" bindtap="tapNumber">5</button>
        <button type="default" data-content="6" size="default" bindtap="tapNumber">6</button>
        <button type="default" data-content="-" size="default" bindtap="tapOperateSymbol">-</button>
        <button type="default" data-content="1" size="default" bindtap="tapNumber">1</button>
        <button type="default" data-content="2" size="default" bindtap="tapNumber">2</button>
        <button type="default" data-content="3" size="default" bindtap="tapNumber">3</button>
        <button type="default" data-content="+" size="default" bindtap="tapOperateSymbol">+</button>
        <button type="default" data-content="0" size="default" bindtap="tapNumber" class="two-column">0</button>
        <button type="default" data-content="." size="default" bindtap="tapNumber">.</button>
        <button type="default" data-content="=" size="default" bindtap="tapOperateSymbol">=</button>
    </view>
</view>
